<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ✅ 필수 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- ✅ Android 11+ 카카오톡 연동 안정화 -->
    <queries>
        <package android:name="com.kakao.talk" />
    </queries>

    <application
        android:name=".FillinApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FILLIN">

        <!-- ✅ 메인 액티비티 (런처) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.FILLIN">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <!-- ✅ 카카오 로그인 Redirect URI 인가코드 처리 -->
        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- 1) 표준: kakao{NATIVE_KEY}://oauth -->
                <data
                    android:scheme="kakao85e947a306e0f3964bd477f6675594d0"
                    android:host="oauth" />

                <!-- 2) fallback: scheme만으로도 잡기 -->
                <data
                    android:scheme="kakao85e947a306e0f3964bd477f6675594d0" />
            </intent-filter>

        </activity>

    </application>

</manifest>
